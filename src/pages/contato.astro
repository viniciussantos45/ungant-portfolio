---
import {
EnvelopeIcon,
InstagramLogoIcon,
LinkedinLogoIcon,
MapPinIcon,
PaperPlaneIcon,
PhoneIcon,
} from "@phosphor-icons/react";
import PrincipalLayout from "../layouts/PrincipalLayout.astro";
---

<PrincipalLayout title="Contato - UNGANT">
  <main class="min-h-screen bg-black py-32 px-8">
    <div class="max-w-[1800px] mx-auto">
      <!-- Header -->
      <div class="mb-20">
        <h1
          class="text-4xl md:text-6xl font-display font-bold uppercase tracking-tighter text-white mb-6"
        >
          VAMOS <span class="text-primary">CONVERSAR</span>
        </h1>
        <p class="text-[10px] tracking-widest uppercase text-white/50 max-w-2xl">
          Estamos prontos para transformar suas ideias em realidade visual.
          Entre em contato e vamos criar algo incrível juntos.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <!-- Info Cards -->
          <div class="space-y-4">
            <div
              class="p-6 border border-white/10 hover:border-primary/30 transition-all group"
            >
              <div
                class="flex items-start gap-4 group-hover:translate-x-2 transition-transform"
              >
                <div
                  class="p-3 bg-primary/10 text-primary group-hover:bg-primary group-hover:text-black transition-colors"
                >
                  <EnvelopeIcon className="w-6 h-6" weight="duotone" />
                </div>
                <div>
                  <h3 class="text-[10px] font-bold tracking-widest uppercase text-primary mb-2">E-MAIL</h3>
                  <a
                    href="mailto:contato@ungant.com"
                    class="text-white hover:text-primary transition-colors"
                  >
                    contato@ungant.com
                  </a>
                </div>
              </div>
            </div>

            <div
              class="p-6 border border-white/10 hover:border-primary/30 transition-all group"
            >
              <div
                class="flex items-start gap-4 group-hover:translate-x-2 transition-transform"
              >
                <div
                  class="p-3 bg-primary/10 text-primary group-hover:bg-primary group-hover:text-black transition-colors"
                >
                  <PhoneIcon className="w-6 h-6" weight="duotone" />
                </div>
                <div>
                  <h3 class="text-[10px] font-bold tracking-widest uppercase text-primary mb-2">TELEFONE</h3>
                  <a
                    href="tel:+5511999999999"
                    class="text-white hover:text-primary transition-colors"
                  >
                    +55 (11) 99999-9999
                  </a>
                </div>
              </div>
            </div>

            <div
              class="p-6 border border-white/10 hover:border-primary/30 transition-all group"
            >
              <div
                class="flex items-start gap-4 group-hover:translate-x-2 transition-transform"
              >
                <div
                  class="p-3 bg-primary/10 text-primary group-hover:bg-primary group-hover:text-black transition-colors"
                >
                  <MapPinIcon className="w-6 h-6" weight="duotone" />
                </div>
                <div>
                  <h3 class="text-[10px] font-bold tracking-widest uppercase text-primary mb-2">
                    LOCALIZAÇÃO
                  </h3>
                  <p class="text-white">
                    São Paulo, SP<br />Brasil
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="p-8 border border-white/10">
            <h3 class="text-[10px] font-bold tracking-widest uppercase text-primary mb-6">
              Redes Sociais
            </h3>
            <div class="flex gap-4">
              <a
                href="https://instagram.com/ungant"
                target="_blank"
                rel="noopener noreferrer"
                class="p-4 bg-primary/10 hover:bg-primary text-primary hover:text-black transition-all group"
              >
                <InstagramLogoIcon
                  className="w-6 h-6 group-hover:scale-110 transition-transform"
                  weight="duotone"
                />
              </a>
              <a
                href="https://linkedin.com/company/ungant"
                target="_blank"
                rel="noopener noreferrer"
                class="p-4 bg-primary/10 hover:bg-primary text-primary hover:text-black transition-all group"
              >
                <LinkedinLogoIcon
                  className="w-6 h-6 group-hover:scale-110 transition-transform"
                  weight="duotone"
                />
              </a>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="p-8 bg-gradient-to-br from-primary/10 to-primary/5 border border-primary/20">
            <h3 class="text-[10px] font-bold tracking-widest uppercase text-primary mb-4">
              Horário de Atendimento
            </h3>
            <div class="space-y-2 text-white">
              <p>
                <span class="font-semibold">Segunda - Sexta:</span> 9h - 18h
              </p>
              <p><span class="font-semibold">Sábado:</span> 9h - 13h</p>
              <p><span class="font-semibold">Domingo:</span> Fechado</p>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div
          class="p-8 md:p-12 border border-white/10 hover:border-primary/20 transition-colors"
        >
          <h2 class="text-3xl font-display font-bold uppercase tracking-tighter text-white mb-8">
            Envie uma Mensagem
          </h2>

          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label
                  for="name"
                  class="block text-[10px] font-bold tracking-widest uppercase text-primary mb-2"
                >
                  Nome
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 bg-black border border-white/20 text-white focus:border-primary focus:outline-none transition-colors"
                  placeholder="Seu nome"
                />
              </div>

              <div>
                <label
                  for="email"
                  class="block text-[10px] font-bold tracking-widest uppercase text-primary mb-2"
                >
                  E-mail
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 bg-black border border-white/20 text-white focus:border-primary focus:outline-none transition-colors"
                  placeholder="seu@email.com"
                />
              </div>
            </div>

            <div>
              <label
                for="phone"
                class="block text-[10px] font-bold tracking-widest uppercase text-primary mb-2"
              >
                Telefone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-black border border-white/20 text-white focus:border-primary focus:outline-none transition-colors"
                placeholder="(11) 99999-9999"
              />
            </div>

            <div>
              <label
                for="subject"
                class="block text-[10px] font-bold tracking-widest uppercase text-primary mb-2"
              >
                Assunto
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 bg-black border border-white/20 text-white focus:border-primary focus:outline-none transition-colors"
                placeholder="Como podemos ajudar?"
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-[10px] font-bold tracking-widest uppercase text-primary mb-2"
              >
                Mensagem
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-4 py-3 bg-black border border-white/20 text-white focus:border-primary focus:outline-none transition-colors resize-none"
                placeholder="Conte-nos sobre seu projeto..."></textarea>
            </div>

            <button
              type="submit"
              class="w-full px-8 py-4 bg-primary text-black font-bold text-xs tracking-widest uppercase hover:bg-white transition-colors group inline-flex items-center justify-center gap-2"
            >
              Enviar Mensagem
              <PaperPlaneIcon
                className="w-5 h-5 group-hover:translate-x-1 transition-transform"
                weight="duotone"
              />
            </button>
          </form>
        </div>
      </div>

      <!-- Map Section -->
      <div class="mt-20">
        <div class="border border-white/10 overflow-hidden h-96">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3657.1976571625994!2d-46.65372368502207!3d-23.56138498468159!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94ce59c8da0aa315%3A0xd59f9431f2c9776a!2sAv.%20Paulista%2C%20S%C3%A3o%20Paulo%20-%20SP!5e0!3m2!1spt-BR!2sbr!4v1234567890123!5m2!1spt-BR!2sbr"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>
    </div>
  </main>
</PrincipalLayout>
